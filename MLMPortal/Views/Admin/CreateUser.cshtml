@model MLMPortal.Models.Registration

@{
    ViewBag.Title = "CreateUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Data;

<style>
    .panel {
        border: none;
        box-shadow: none;
        /* BORDER-TOP: 4PX SOLID #189279; */
    }

    .panel {
        border: none;
        box-shadow: none;
    }

    .panel {
        margin-bottom: 20px;
        background-color: #fff;
        border: 1px solid transparent;
        border-radius: 4px;
        -webkit-box-shadow: 0 1px 1px rgb(0 0 0 / 5%);
        box-shadow: 0 1px 1px rgb(0 0 0 / 5%);
    }

    .panel-heading {
        border-color: #eff2f7;
        font-size: 16px;
        font-weight: 400;
        background: #f88e3f;
        text-transform: uppercase;
        padding: 15px;
        color: #fff;
    }

    .panel-body {
        padding: 15px;
        border: none;
        box-shadow: none;
        BORDER-TOP: 4PX SOLID #189279;
    }

    .row1 {
        display: inline-block;
        /*margin-top: 61px;*/
        padding: 15px;
        width: 100%;
        BORDER: 1PX SOLID #cdcecd;
        BACKGROUND: #f9ffe6;
        /* background-color: #93119324; */
        background-image: url(https://www.transparenttextures.com/patterns/hexellence.png);
    }
</style>
<form method="post">

    <div class="row">
        <div class="col-sm-6">
            <section class="panel">
                <header class="panel-heading">
                    Create User 
                    <span class="tools pull-right">
                        <a href="javascript:;" class="fa fa-times"></a>
                    </span>
                </header>
                <div class="panel-body">
                    <section>
                        <div class="form-horizontal">
                            <h5>@TempData["msg"]</h5>

                            <div class="form-group">
                                <label class="lab control-label">
                                    User Name*
                                </label>
                                <div class="col-lg-12">
                                    @if (Model.user_code != null)
                                    {

                                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control",@disabled= "disabled" })
                                    }
                                    else
                                    {

                                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                                    }
                                    @*@Html.DropDownListFor(model => model.Status, new List<SelectListItem>() { new SelectListItem { Value = "1", Text = "" }, }, "Packege", new { @class = "form-control" })*@

                                </div>
                            </div>

                            <div class="form-group">
                                <label class="lab control-label">
                                    Password*

                                </label>
                                <div class="col-lg-12">
                                    @Html.TextBoxFor(model => model.Pass, new { @class = "form-control", @type = "password" })
                                </div>
                            </div>


                            <div class="form-group">
                                <label class="lab control-label">
                                    User Contact No*
                                </label>
                                <div class="col-lg-12">
                                    @Html.TextBoxFor(model => model.MobileNo, new { @class = "form-control" })
                                </div>
                            </div>
                            @Html.HiddenFor(model => model.user_code)

                            @if (Model.user_code != null)
                            {
                                <input type="submit" value="Update" />
                            }
                            else
                            {
                                <input type="submit" value="Create User" />
                            }


                        </div>
                    </section>
                </div>
            </section>
        </div>

</form>

<div class="col-sm-6">
    <section class="panel">
        <header class="panel-heading">
            User Datails
            <span class="tools pull-right">
                <a href="javascript:;" class="fa fa-times"></a>
            </span>
        </header>

        <div class="card-body">
            <div class="card-title">PRODUCT DETAILS</div>
            <hr>
            <div class="table-responsive">
                <table id="default-datatable" class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Sr.No.</th>
                            <th>User Name</th>
                            <th>Password</th>
                            <th>Contact No</th>
                            <th>Edit</th>
                            @*<th>Delete</th>*@


                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.dt != null && Model.dt.Rows.Count > 0)
                        {
                            int i = 0;
                            foreach (DataRow item in Model.dt.Rows)
                            {
                                i++;

                                <tr>
                                    <td>@i </td>

                                    <td class="NewsFor">@item["username"]</td>
                                    <td class="NewsHeading">@item["Pass"]</td>
                                    <td class="NewsPreference">@item["MobileNo"]</td>



                                    <td>
                                        <a href="/Admin/CreateUser?user_code=@item["user_code"]"><i class="icofont-pen-alt-1"></i><i class='fa fa-pencil'></i> </a>
                                    </td>



                                    @*<td >
                                            <a href="/Admin/DeleteUserDetails?user_code=@item["user_code"]"><i class="icofont-pen-alt-1"></i><i class='fa fa-pencil'></i> </a>
                                        </td>*@

                                </tr>

                            }
                        }
                    </tbody>

                </table>
            </div>



        </div>

    </section>
</div>
