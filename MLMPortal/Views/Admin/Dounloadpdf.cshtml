        function DeletePlanMaster(CategoryId) {
            var x = confirm("Are you sure you want to delete?");
            //debugger;
            if (x) {
                var dataobject = {
                    CategoryId: CategoryId
                };
                $.ajax({
                    type: "POST",
                    url: "/Admin/DeletePlanMaster",
                    data: dataobject,
                    dataType: "json",
                    success: function (r) {
                        if (r.CategoryId == "1") {
                            alert(r.msg);
                            location.reload();
                        }
                        else {
                            alert(r.msg);
                        }
                    }
                });
            }
            else {
                return false;
            }
        }
