@model MLMPortal.Models.Registration
@{
    ViewBag.Title = "ChangePassword";
    //Layout = "~/Views/Shared/Adminlayout.cshtml";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Data;
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

<style>
    label {
        margin-left: 15px;
    }
</style>
<style>
    .card .table td, .card .table th {
        padding-right: 0px;
        padding-left: 0px;
    }

    .table td, .table th {
        padding: 0px;
    }
</style>
@if (TempData["flag"] != null)
{

    <script>
        $(document).ready(function () {
            //debugger;
            if ('@TempData["flag"]' == "1") {
                alert('@TempData["msg"].ToString()', window.location.href = "ChangePassword");
            }
            else if ('@TempData["flag"]' == "0") {
                alert('@TempData["msg"].ToString()', window.location.href = "ChangePassword");

            }
            else {
                alert("Server Not Response!");
            }

        });

    </script>
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

<script type="text/javascript">

    function isNumber(evt) {
        evt = (evt) ? evt : window.event;
        var charCode = (evt.which) ? evt.which : evt.keyCode;
        if (charCode > 31 && (charCode < 48 || charCode > 57)) {
            return false;
        }
        return true;
    }
</script>
<div class="row pt-2 pb-2">
    
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card-header" style="background-color:darkblue;color:white;"><i class="fa fa-table"></i>Change Password</div>
                </div>

            </div>
            <div class="card-body">
                <form method="post">

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="row">
                                <div class="col-sm-12">
                                    <label class="lab control-label">Old Password:</label>
                                    @Html.TextBoxFor(m => m.OldPassword, new { @class = "form-control", })
                                    <label class="lab control-label">New Password :</label>
                                    @Html.TextBoxFor(m => m.NewPassword, new { @class = "form-control", })
                                    <label class="lab control-label">Confirm Password:</label>
                                    @Html.TextBoxFor(m => m.ConPass, new { @class = "form-control" })
                                   
                                    <div class="col-sm-2" style="margin-top:30px">
                                        <button type="submit" class="btn btn-success shadow-primary px-5" id="btnSerach" onclick="return Validate()"><i class="icon-lock"></i> Update Password</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6"></div>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>
<script>
    function Validate() {
        //debugger;
        if ($('#OldPassword').val() == "")
        {
            alert("Please Enter All Fields");
            return false;
        }
        if ($('#NewPassword').val() == "") {
            alert("Please Enter All Fields");
            return false;
        }
        if ($('#ConPass').val() == "") {
            alert("Please Enter All Fields");
            return false;
        }
        if ($('#NewPassword').val()!=$('#ConPass').val()) {
            alert("New Password and Confrim Password Must be same.!!");
            return false;
        }
        
    }



</script>



