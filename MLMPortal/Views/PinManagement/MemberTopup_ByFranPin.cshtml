                                    //    success: function (data1) {
                                    //        debugger;
                                    //        alert(data1);
                                    //        var DataObject = JSON.parse(data1);
                                    //        alert(DataObject);
                                    //    }
                                    //});
                                    $.post('/PinManagement/GetMemberDetails_ById', { MemberId: $.trim($('#memberId').val()) }, function (data1) {
                                        debugger;
                                        //alert(data1);
                                        var DataObject = JSON.parse(data1);
                                        if (DataObject.length != 0) {
                                            $('#Name').val(DataObject[0].Name);
