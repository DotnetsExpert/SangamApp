                                @*@Html.DropDownListFor(m => m.Pin, Model.lstPin, new { @class = "form-control" })*@
                            </div>
                        </div>

                        <div class="col-sm-3">

                            <input type="submit" value="Submit" onclick="return Validate()" class="btn btn-success btn-group-lg form-control" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
